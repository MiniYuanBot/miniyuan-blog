---
import { BaseLayout, Hero, Section } from "../components/layouts";
import { EducationCard, SkillCard, Card } from "../components/ui";
import {
	heroConfig,
	educationConfig,
	skillConfig,
	siteConfig,
} from "../config";
---

<BaseLayout title={siteConfig.title} description={siteConfig.description}>
	<!-- Hero -->
	<Section>
		<Hero {...heroConfig} />
	</Section>

	<Section title="About">
		<Card padding="lg" hover class="hover:cursor-pointer">
			<div class="flex flex-col text-left">
				{
					heroConfig.introduction.map((text) => (
						<p class="text-base md:text-lg leading-relaxed mb-3 text-muted-foreground last:mb-0">
							{text}
						</p>
					))
				}
			</div>
		</Card>
	</Section>

	<!-- Education -->
	<Section title="Education">
		{
			educationConfig.map((item) => (
				<EducationCard
					school={item.school}
					period={item.period}
					location={item.location}
					description={item.description}
					logo={item.logo}
				/>
			))
		}
	</Section>

	<!-- Skills -->
	<Section title="Skills">
		{
			skillConfig.map((item) => (
				<SkillCard
					title={item.title}
					showHeader={item.showHeader}
					padding={item.padding}
					hover={item.hover}
					skills={item.skills}
				/>
			))
		}
	</Section>

	<!-- Projects -->
	<!-- Blogs -->
	<!-- Misc -->
	<!-- Publications -->
</BaseLayout>
