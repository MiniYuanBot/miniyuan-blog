---
import { Card } from "../ui";

interface Props {
    avatarSrc: string;
    avatarAlt?: string;
    name: string;
    tagline: string;
    introduction: string[];
}
const {
    avatarSrc,
    avatarAlt = "profile photo",
    name,
    tagline,
    introduction,
} = Astro.props;
---

<Card padding="lg" hover={false} class="hero-container">
    <div class="hero-grid">
        <div class="hero-avatar-container">
            <img
                src={avatarSrc}
                alt={avatarAlt}
                class="hero-avatar hero-avatar-hover"
                width="240"
                height="240"
                loading="lazy"
            />
        </div>
        <div class="hero-content">
            <h1 class="hero-title">Hi I'm {name}</h1>
            <p class="hero-tagline">{tagline}</p>

            {
                introduction.map((text) => (
                    <p class="hero-text">{text}</p>
                ))
            }
        </div>
    </div>
</Card>
