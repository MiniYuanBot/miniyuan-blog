---
// The <IconLink /> component is employed to create consistent html icon link.

import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a"> & {
    isExternal?: boolean;
    label: string; // aria-label
    svg?: string;
    isMobile?: boolean;
};

const {
    href,
    class: className,
    isExternal = false,
    label,
    svg,
    isMobile = false,
    ...props
} = Astro.props;

// whether an external link(start with http) or not
const hrefString = String(href);
const isExternalLink = isExternal || hrefString.startsWith("http");

// internal links need to check active status
let isActive = false;
if (!isExternalLink) {
    const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
    const subpath = pathname.match(/[^\/]+/g);
    isActive = href === pathname || href === "/" + (subpath?.[0] || "");
}

// external links need to add extra attributes
const externalProps = isExternalLink
    ? {
          target: "_blank",
          rel: "noopener noreferrer",
      }
    : {};
---

<a
    href={hrefString}
    class:list={[
        className,
        "icon-link",
        // Desktop styles
        !isMobile && [
            "flex p-2",
            "text-[rgb(var(--gray))]",
            "rounded-md",
            "transition-colors duration-200 ease-out",
            "hover:bg-[hsl(var(--muted-hsl))] hover:text-[rgb(var(--black))]",
            "dark:hover:bg-[rgb(var(--gray-dark)/0.5)] dark:hover:text-white",
        ],
        // Mobile styles
        isMobile && [
            "mobile-menu-icon-item flex flex-1 items-center justify-center gap-2 p-3",
            "text-[rgb(var(--black))] dark:text-[rgb(var(--gray-light))]",
            "text-sm font-medium no-underline",
            "bg-transparent rounded-[0.625rem]",
            "border border-transparent",
            "transition-all duration-200 ease-out",
            "hover:scale-105 hover:text-[rgb(var(--black))] dark:hover:text-white",
            "dark:hover:border-[hsl(var(--border-hsl)/0.3)]",
        ],
        { active: isActive, external: isExternalLink },
    ]}
    aria-label={label}
    {...externalProps}
    {...props}
>
    {svg && <span class="flex w-5 h-5" set:html={svg} />}
    {isMobile && <span class="text-sm font-medium">{label}</span>}
    {!isMobile && <span class="sr-only">{label}</span>}
    <slot />
</a>

<style>
    .icon-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: inherit;
        transition: all 0.2s ease;
    }

    .icon-link.active {
        color: var(--accent, #000);
    }

    .dark .icon-link.active {
        color: var(--accent-dark, #fff);
    }

    /* external link tag */
    .icon-link.external::after {
        content: "â†—";
        font-size: 0.75em;
        margin-left: 0.15em;
        opacity: 0.6;
    }

    /* Mobile menu item styles */
    .mobile-menu-icon-item {
        text-shadow: 0 1px 2px hsl(var(--card-hsl) / 0.8);
    }

    .dark .mobile-menu-icon-item {
        text-shadow: 0 1px 3px rgb(0 0 0 / 0.4);
    }

    .dark .mobile-menu-icon-item:hover {
        border-color: hsl(var(--border-hsl) / 0.3);
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }
</style>
