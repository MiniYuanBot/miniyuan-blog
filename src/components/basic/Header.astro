---
// The <Header /> component is employed to create consistent html header.

import { siteConfig } from "@/config";
import TextLink from "./TextLink.astro";
import IconLink from "./IconLink.astro";

const HomeIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>`;
const SearchIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/></svg>`;
const MenuIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/></svg>`;

const navLeft = { path: "/", label: siteConfig.title };
const navCenter = [
	{ path: "/blog", label: "Blog" },
	{ path: "/tags", label: "Tags" },
	{ path: "/links", label: "Links" },
	{ path: "/about", label: "About" },
];
const navRight = [
	{ path: "/", label: "Home", svg: HomeIcon },
	{ path: "/search", label: "Search", svg: SearchIcon },
];
---

<header-component>
	<nav>
		<!-- Left: site title -->
		<div class="nav-left">
			<h2>
				<a href={navLeft.path}>{siteConfig.title}</a>
			</h2>
		</div>

		<!-- Center: main navigation -->
		<div class="nav-center">
			{
				navCenter.map((item) => (
					<TextLink href={item.path}>
						<span class="nav-label">{item.label}</span>
					</TextLink>
				))
			}
		</div>

		<!-- Right: icon links -->
		<div class="nav-right">
			{
				navRight.map(({ path, label, svg }) => (
					<IconLink href={path} label={label}>
						<span class="nav-icon" set:html={svg} />
						<span class="sr-only">{label}</span>
					</IconLink>
				))
			}
		</div>

		<!-- Mobile: menu button -->
		<div class="nav-mobile-button">
			<button id="toggleMenu" aria-label="Menu">
				<span set:html={MenuIcon} />
			</button>
		</div>
	</nav>

	<!-- Mobile menu dropdown -->
	<div id="mobileMenu" class="nav-mobile">
		<div class="mobile-nav-center">
			{
				navCenter.map((item) => (
					<TextLink href={item.path}>{item.label}</TextLink>
				))
			}
		</div>
		<div class="mobile-nav-right">
			{
				navRight.map(({ path, label, svg }) => (
					<IconLink href={path} label={label}>
						<span class="nav-icon" set:html={svg} />
						{label}
					</IconLink>
				))
			}
		</div>
	</div>
</header-component>

<script>
	class HeaderComponent extends HTMLElement {
		connectedCallback() {
			// scroll state
			let preScrollY = window.scrollY;
			this.classList.toggle("not-top", preScrollY > 20);

			window.addEventListener("scroll", () => {
				const currentScrollY = window.scrollY;
				this.classList.toggle("not-top", currentScrollY > 20);
				this.dataset.show = (
					currentScrollY < 350 || currentScrollY < preScrollY
				).toString();
				preScrollY = currentScrollY;
			});

			// mobile menu
			const menuBtn = this.querySelector("#toggleMenu");
			const mobileMenu = this.querySelector("#mobileMenu");

			menuBtn?.addEventListener("click", () => {
				this.classList.toggle("expanded");
			});

			mobileMenu?.querySelectorAll("a").forEach((link) => {
				link.addEventListener("click", () => {
					this.classList.remove("expanded");
				});
			});
		}
	}

	customElements.define("header-component", HeaderComponent);
</script>

<style>
	header-component {
		position: sticky;
		top: 0;
		z-index: 50;
		display: block;
		background: white;
		border-bottom: 1px solid transparent;
		transition: all 0.3s;
	}

	/* scroll state */
	header-component.not-top {
		background: rgba(255, 255, 255, 0.8);
		backdrop-filter: blur(4px);
		-webkit-backdrop-filter: blur(4px);
		border-bottom: 1px solid #e4e4e7;
		box-shadow:
			0 4px 6px -1px rgba(0, 0, 0, 0.1),
			0 2px 4px -1px rgba(0, 0, 0, 0.06);
		padding-left: 2rem;
		padding-right: 2rem;
	}

	header-component[data-show="false"]:not(.expanded) {
		transform: translateY(-100%);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 64px;
		margin: 0 auto;
		padding: 0 1.5rem;
		max-width: 1200px;
	}

	.nav-left {
		flex: 1;
	}

	.nav-center {
		flex: 1;
		display: flex;
		justify-content: center;
		gap: 0.25rem;
	}

	.nav-right {
		flex: 1;
		display: flex;
		justify-content: flex-end;
		gap: 0.25rem;
	}

	h2 {
		margin: 0;
		font-size: 1.25rem;
		font-weight: 600;
	}

	h2 a {
		color: black;
		text-decoration: none;
	}

	.nav-center a {
		padding: 0.5rem 0.75rem;
		color: #3f3f46;
		text-decoration: none;
		font-size: 0.9375rem;
		font-weight: 500;
		border-radius: 6px;
	}

	.nav-center a:hover {
		background: #f4f4f5;
		color: black;
	}

	.nav-right a {
		display: flex;
		padding: 0.5rem;
		color: #3f3f46;
		border-radius: 6px;
	}

	.nav-right a:hover {
		background: #f4f4f5;
		color: black;
	}

	.nav-icon {
		display: flex;
		width: 1.25rem;
		height: 1.25rem;
	}

	.nav-mobile-button {
		display: none;
	}

	.nav-mobile {
		display: none;
	}

	@media (max-width: 768px) {
		nav {
			padding: 0 1rem;
		}

		.nav-center,
		.nav-right {
			display: none;
		}

		.nav-left {
			flex: 0;
		}

		.nav-mobile-button {
			display: block;
		}

		.nav-mobile-button button {
			display: flex;
			padding: 0.5rem;
			background: transparent;
			border: none;
			color: black;
			border-radius: 6px;
		}

		.nav-mobile-button button:hover {
			background: #f4f4f5;
		}

		.nav-mobile-button svg {
			width: 24px;
			height: 24px;
		}

		.nav-mobile {
			position: absolute;
			top: 64px;
			left: 0;
			right: 0;
			display: flex;
			flex-direction: column;
			gap: 1rem;
			padding: 1rem;
			background: white;
			border-bottom: 1px solid #e4e4e7;
			box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
			transform: translateY(-100%);
			opacity: 0;
			visibility: hidden;
			transition: all 0.3s;
		}

		.expanded .nav-mobile {
			transform: translateY(0);
			opacity: 1;
			visibility: visible;
		}

		.mobile-nav-center {
			display: flex;
			flex-direction: column;
			gap: 0.25rem;
		}

		.mobile-nav-center a {
			padding: 0.75rem 1rem;
			color: #3f3f46;
			text-decoration: none;
			border-radius: 6px;
		}

		.mobile-nav-center a:hover {
			background: #f4f4f5;
		}

		.mobile-nav-right {
			display: flex;
			gap: 0.5rem;
			padding-top: 0.5rem;
			border-top: 1px solid #e4e4e7;
		}

		.mobile-nav-right a {
			display: flex;
			align-items: center;
			gap: 0.5rem;
			padding: 0.5rem;
			color: #3f3f46;
			text-decoration: none;
			border-radius: 6px;
		}

		.mobile-nav-right a:hover {
			background: #f4f4f5;
		}
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
	}
</style>
