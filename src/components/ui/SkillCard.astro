---
// src/components/skill-card.astro
import { Card, Button } from "@/components/ui";

interface Props {
    title?: string;
    skills: Array<{
        category: string;
        items: string[];
    }>;
    showHeader?: boolean;
    padding?: "none" | "sm" | "md" | "lg" | "xl";
    hover?: boolean;
}

const {
    title = "Skills",
    skills,
    showHeader = false,
    padding = "md",
    hover = true,
} = Astro.props;
---

<Card
    padding={padding}
    hover={hover}
    class="hover:cursor-pointer"
>
    <div class={"skill-card-wrapper"}>
        {
            showHeader && title && (
                <div class={"skill-card-header"}>
                    <h3 class={"skill-card-title"}>{title}</h3>
                </div>
            )
        }

        <div class={"skill-card-content"}>
            {
                skills.map((skill) => (
                    <div class={"skill-card-item"}>
                        <span class={"skill-card-category"}>
                            {skill.category}:
                        </span>
                        <div class={"skill-card-tags"}>
                            {skill.items.map((item) => (
                                <Button as="span" title={item} class="hover:cursor-pointer" />
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</Card>
