---
// src/components/skill-card.astro
import { Card, Button } from "@/components/ui";

interface Props {
    title?: string;
    skills: Array<{
        category: string;
        items: string[];
    }>;
    showHeader?: boolean;
    padding?: "none" | "sm" | "md" | "lg" | "xl";
    hover?: boolean;
}

const {
    title = "Skills",
    skills,
    showHeader = false,
    padding = "md",
    hover = true,
} = Astro.props;
---

<Card
    padding={padding}
    hover={hover}
    class="hover:cursor-pointer"
>
    <div class="stack-start">
        {
            showHeader && title && (
                <div class="flex-between border-b border-border/50 w-full pb-2 mb-4">
                    <h3 class="text-lg font-semibold text-foreground w-full">{title}</h3>
                </div>
            )
        }

        <div class="flex flex-col gap-3">
            {
                skills.map((skill) => (
                    <div class="flex items-start gap-2">
                        <span class="text-sm font-medium text-muted-foreground min-w-[90px]">
                            {skill.category}:
                        </span>
                        <div class="flex flex-wrap gap-2">
                            {skill.items.map((item) => (
                                <Button as="span" title={item} class="hover:cursor-pointer" />
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</Card>
