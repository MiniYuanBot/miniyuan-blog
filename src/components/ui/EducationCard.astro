---
import Card from "./Card.astro";

interface Props {
    school: string;
    period: string;
    location: string;
    description: string;
    logo?: string;
    padding?: "none" | "sm" | "md" | "lg" | "xl";
    hover?: boolean;
}

const {
    school,
    period,
    location,
    description,
    logo,
    padding = "md",
    hover = true,
} = Astro.props;
---

<Card padding={padding} hover={hover} class="group hover:cursor-pointer">
    {/* Logo background */}
    {
        logo && (
            <div class="absolute inset-0 z-1 pointer-events-none overflow-hidden bg-card">
                <img
                    src={logo}
                    alt={`${school} logo`}
                    class:list={[
                        "absolute top-1/2 right-2.5 -translate-y-1/2 max-w-[240px] max-h-[240px] w-auto h-auto",
                        "object-contain opacity-50 transition-base mix-blend-multiply group-hover:opacity-70 group-hover:scale-105",
                        "md:right-4 md:max-w-[280px] md:max-h-[280px] lg:right-5 lg:max-w-[320px] lg:max-h-[320px]",
                        "xl:right-6 xl:max-w-[360px] xl:max-h-[360px] sm:right-1 sm:max-w-[160px] sm:max-h-[160px]",
                        "dark:mix-blend-screen dark:brightness-150",
                    ]}
                    loading="lazy"
                />
            </div>
        )
    }

    {/* Card content */}
    <div class="relative z-2 h-full flex flex-col items-start justify-start">
        {/* School name */}
        <div class="pb-2 mb-2 border-b border-border w-full">
            <h3
                class="text-card-foreground text-xl font-bold leading-tight m-0"
            >
                {school}
            </h3>
        </div>

        {/* Time and location info */}
        <div class="py-0 mb-2">
            <div class="flex flex-row gap-4 lg:gap-6 sm:gap-2">
                <div class="flex items-center gap-6">
                    <span
                        class="text-card-foreground font-medium text-base lg:text-lg sm:text-sm"
                        >{period}</span
                    >

                    <span
                        class="text-card-foreground font-medium text-base lg:text-lg sm:text-sm"
                        >{location}</span
                    >
                </div>
            </div>
        </div>

        {/* Description */}
        <div class="mt-1">
            <p class="text-muted-foreground leading-relaxed m-0 text-base lg:text-lg sm:text-sm">{description}</p>
        </div>
    </div>
</Card>
