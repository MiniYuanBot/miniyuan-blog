---
import Card from "./Card.astro";

interface Props {
    school: string;
    period: string;
    location: string;
    description: string;
    logo?: string;
    padding?: "none" | "sm" | "md" | "lg" | "xl";
    hover?: boolean;
}

const {
    school,
    period,
    location,
    description,
    logo,
    padding = "md",
    hover = true,
} = Astro.props;

const textBase =
    "text-card-foreground font-medium text-base lg:text-lg sm:text-sm";
---

<Card padding={padding} hover={hover} class="group cursor-pointer">
    {/* Logo background */}
    {
        logo && (
            <div class="absolute inset-0 z-[1] pointer-events-none overflow-hidden bg-card">
                <img
                    src={logo}
                    alt={`${school} logo`}
                    class:list={[
                        "absolute top-1/2 right-2.5 -translate-y-1/2 max-w-[240px] max-h-[240px] w-auto h-auto",
                        "object-contain opacity-50 transition-base mix-blend-multiply group-hover:opacity-70 group-hover:scale-105",
                        "sm:right-1 sm:max-w-[160px] sm:max-h-[160px]",
                        "md:right-4 md:max-w-[280px] md:max-h-[280px]",
                        "lg:right-5 lg:max-w-[320px] lg:max-h-[320px]",
                        "xl:right-6 xl:max-w-[360px] xl:max-h-[360px]",
                        "dark:mix-blend-screen dark:brightness-150",
                    ]}
                    loading="lazy"
                />
            </div>
        )
    }

    {/* Card content */}
    <div class="relative z-[2] flex flex-col">
        {/* School name */}
        <div class="pb-2 mb-2 border-b border-border w-full">
            <h3 class="text-card-foreground text-xl font-bold leading-tight">
                {school}
            </h3>
        </div>

        {/* Time and location info */}
        <div class="mb-2 flex gap-4 lg:gap-6 sm:gap-2">
            <span class={textBase}>{period}</span>
            <span class={textBase}>{location}</span>
        </div>

        {/* Description */}
        <p
            class="text-muted-foreground leading-relaxed mt-1 text-base lg:text-lg sm:text-sm"
        >
            {description}
        </p>
    </div>
</Card>
