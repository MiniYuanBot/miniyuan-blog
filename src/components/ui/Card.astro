---
// src/components/ui/Card.astro
export interface Props {
    class?: string;
    padding?: "none" | "sm" | "md" | "lg" | "xl";
    hover?: boolean;
    bordered?: boolean;
    glass?: boolean;
    children?: any;
}

const {
    class: className = "",
    padding = "md",
    hover = true,
    bordered = true,
    glass = false,
} = Astro.props;

const paddingMap = {
    none: "",
    sm: "card-padding-sm",
    md: "card-padding-md",
    lg: "card-padding-lg",
    xl: "card-padding-xl",
};
---

<div class:list={[
    "card-container",
    { "card-hover": hover },
    { "card-bordered": bordered },
    paddingMap[padding],
    glass ? "card-glass" : "card-solid",
    className
]}>
    <slot />
</div>
