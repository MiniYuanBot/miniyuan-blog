---
// src/components/ui/Card.astro
export interface Props {
    class?: string;
    padding?: "none" | "sm" | "md" | "lg" | "xl";
    hover?: boolean;
    glass?: boolean;
    children?: any;
}

const {
    class: className = "",
    padding = "md",
    hover = true,
    glass = false,
} = Astro.props;

const paddingMap = {
    none: "",
    sm: "p-3 md:p-4",
    md: "p-4 md:p-5 lg:p-6",
    lg: "p-5 md:p-6 lg:p-7 xl:p-8",
    xl: "p-6 md:p-7 lg:p-8 xl:p-9",
};
---

<div class:list={[
    "relative w-full rounded-lg border border-border/50 shadow-md overflow-hidden transition-base",
    { "hover:translate-y-[-3px] hover:shadow-lg hover:border-border": hover },
    paddingMap[padding],
    glass ? "backdrop-blur-md bg-card/80" : "bg-card",
    className
]}>
    <slot />
</div>
